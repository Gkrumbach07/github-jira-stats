# Jira Configuration (On-premise with Token Authentication)
JIRA_HOST=issues.redhat.com
JIRA_ACCESS_TOKEN=your-jira-access-token

# Alternative: Jira Cloud Configuration (Username/Password Authentication)
# JIRA_USERNAME=your-email@company.com
# JIRA_PASSWORD=your-jira-api-token

# GitHub Configuration
GITHUB_TOKEN=ghp_your_github_personal_access_token
GITHUB_OWNER=opendatahub-io
GITHUB_REPO=odh-dashboard

# Jira Custom Field Configuration
# Custom field ID where GitHub PR links are stored
JIRA_GITHUB_FIELD_ID=customfield_12310220
# Custom field ID for sprint identification
JIRA_SPRINT_FIELD_ID=customfield_12310940

# CSV Export Configuration (Optional)
# Enable time-bucketed CSV export
CSV_EXPORT=false
# Time bucketing options: daily, weekly, monthly, n_days
TIME_BUCKET_TYPE=monthly
# For n_days: number of days per bucket
TIME_BUCKET_SIZE=7
# Directory where CSV files will be created
CSV_OUTPUT_DIR=csv_exports
